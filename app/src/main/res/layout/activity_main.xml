<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/view2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="75dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="75dp"
            android:background="@color/primaryLightColor" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="IMDB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent" android:textSize="50sp"
            android:textAlignment="center" android:textStyle="bold|italic" android:textColor="@color/primaryTextColor"
            android:background="@color/primaryColor"/>
    <Button
            android:text="Show movie list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            style="@android:style/Widget.Material.Button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="@+id/view2" android:layout_marginStart="32dp"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textSize="30sp"/>
    <Button
            android:text="Load data from database"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:textSize="30sp"/>
</android.support.constraint.ConstraintLayout>